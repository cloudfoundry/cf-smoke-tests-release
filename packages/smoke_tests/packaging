set -ex

REPO_DIR=${BOSH_INSTALL_TARGET}/src/smoke_tests
mkdir -p ${REPO_DIR}

cp -a smoke_tests/* ${REPO_DIR}

export GOPATH=${BOSH_INSTALL_TARGET}
export GOROOT=$(readlink -nf /var/vcap/packages/golang-1.17-linux)
export GOCACHE=/var/vcap/data/golang-1.17-linux/cache

export PATH=${GOROOT}/bin:${PATH}
export PATH=${GOPATH}/bin:${PATH}

cd ${BOSH_INSTALL_TARGET}/src/smoke_tests

go install github.com/onsi/ginkgo/v2/ginkgo
ginkgo build -r .
